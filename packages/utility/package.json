{
  "name": "@plainsheet/utility",
  "version": "0.0.3",
  "description": "General utility modules for building UI components",
  "keywords": [
    "javascript",
    "typescript",
    "utility"
  ],
  "private": false,
  "sideEffects": false,
  "license": "MIT",
  "type": "module",
  "main": "dist/plainsheet-utility.cjs.js",
  "module": "dist/plainsheet-utility.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/plainsheet-utility.es.js",
      "require": "./dist/plainsheet-utility.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc --noEmit && vite build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest --ui"
  },
  "devDependencies": {
    "@internal/eslint-config": "workspace:*",
    "@internal/typescript-config": "workspace:*",
    "@testing-library/dom": "^10.1.0",
    "@types/node": "^20.12.3",
    "@vitest/coverage-v8": "1.6.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-css-injected-by-js": "^3.5.0",
    "vite-plugin-dts": "^3.8.1",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
