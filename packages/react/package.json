{
  "name": "@plainsheet/react-plain-bottom-sheet",
  "version": "0.0.4",
  "private": false,
  "sideEffects": false,
  "license": "MIT",
  "keywords": [
    "ui",
    "react",
    "javascript",
    "typescript",
    "component",
    "bottom-sheet"
  ],
  "type": "module",
  "main": "dist/react-plain-bottom-sheet.cjs.js",
  "module": "dist/react-plain-bottom-sheet.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/react-plain-bottom-sheet.es.js",
      "require": "./dist/react-plain-bottom-sheet.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc --noEmit && vite build",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "lint": "eslint . --max-warnings 0",
    "test": "vitest run",
    "test:watch": "vitest --ui"
  },
  "dependencies": {
    "@plainsheet/plain-bottom-sheet-core": "workspace:*",
    "pbs-utility": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/ui": "^1.6.0",
    "eslint": "^9.8.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "jsdom": "^24.0.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.4.0",
    "vitest": "^1.6.0",
    "vite-plugin-dts": "^3.8.1"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18"
  }
}
